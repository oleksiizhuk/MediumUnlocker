{
  "manifest_version": 3,
  "name": "Medium Unlocker",
  "version": "1.0",
  "description": "Adds a button to open Medium articles on Freedium",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://medium.com/*",
        "*://*.medium.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}